{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"useExhaustiveDependencies": "off",
				"useYield": "info"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "warn",
				"useAsConstAssertion": "warn",
				"useForOf": "warn",
				"noParameterAssign": "off",
				"useNamingConvention": "off",
				"useTemplate": "off"
			},
			"suspicious": {
				"noControlCharactersInRegex": "off",
				"noExplicitAny": "off",
				"noAssignInExpressions": "info"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"useEditorconfig": true,
		"lineWidth": 80,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "asNeeded"
		}
	}
}
